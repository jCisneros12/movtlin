<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/item_recomm_movie"
    android:background="@drawable/background_movie"
    android:layout_marginHorizontal="@dimen/dimen10dp"
    android:layout_width="225dp"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/poster_image_recommended"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/recommended_poster_example"
        app:riv_corner_radius="6dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/dimen10dp">

        <TextView
            android:id="@+id/title_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spider-Man: Homecoming"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/dimen12sp"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/average_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen8dp"
                android:fontFamily="@font/ubunt_medium"
                android:text="7.8"
                android:layout_gravity="center"
                android:textColor="@color/color_accent"
                android:textSize="@dimen/dimen12sp" />
            <ImageView
                android:layout_width="@dimen/dimen14dp"
                android:layout_height="@dimen/dimen14dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen4dp"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/votes_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/dimen8dp"
                android:layout_marginStart="@dimen/dimen4dp"
                android:fontFamily="@font/ubunt_medium"
                android:text="2789 votes"
                android:textColor="@color/color_hint"
                android:textSize="@dimen/dimen10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/overview_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/example_overview"
            android:textSize="@dimen/dimen10sp"
            android:textColor="@color/color_hint"
            android:maxLines="4"
            android:ellipsize="end" />

    </LinearLayout>



</LinearLayout>