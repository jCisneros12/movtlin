<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_txt_genre"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen30dp"
        android:text="@string/genre_name"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/dimen5dp"
        android:background="@drawable/background_genre"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dimen15dp"
        android:fontFamily="@font/ubunt_medium"
        android:textSize="@dimen/dimen14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>